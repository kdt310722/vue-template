{
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "pnpm typecheck && vite build",
        "build:dev": "VITE_SOURCEMAP=1 pnpm build",
        "preview": "vite preview --host 0.0.0.0",
        "preview:https": "VITE_HTTPS=1 pnpm preview",
        "test": "echo \"no test specified\" && exit 0",
        "sizecheck": "npx vite-bundle-visualizer",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "vue-tsc --noEmit",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks"
    },
    "dependencies": {
        "@kdt310722/utils": "^0.0.5",
        "@unocss/reset": "^0.58.5",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.0",
        "tailwind-merge": "^2.2.1",
        "vue": "^3.4.21",
        "vue-i18n": "^9.10.1",
        "vue-router": "^4.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.0.3",
        "@commitlint/config-conventional": "^19.0.3",
        "@iconify/json": "^2.2.188",
        "@intlify/unplugin-vue-i18n": "^2.0.0",
        "@julr/unocss-preset-forms": "^0.1.0",
        "@julr/vite-plugin-validate-env": "^1.1.1",
        "@kdt310722/eslint-config": "^0.0.5",
        "@kdt310722/tsconfig": "^1.0.0",
        "@types/node": "^20.11.24",
        "@unocss/preset-wind": "^0.58.5",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vitejs/plugin-vue-jsx": "^3.1.0",
        "@vue-macros/volar": "^0.18.11",
        "@vue/compiler-sfc": "^3.4.21",
        "@vueuse/core": "^10.9.0",
        "@vueuse/head": "^2.0.0",
        "eslint": "^8.57.0",
        "lightningcss": "^1.24.0",
        "lint-staged": "^15.2.2",
        "npm-check-updates": "^16.14.15",
        "only-allow": "^1.2.1",
        "simple-git-hooks": "^2.10.0",
        "typescript": "^5.3.3",
        "unocss": "^0.58.5",
        "unocss-preset-extra": "^0.5.3",
        "unocss-transformer-alias": "^0.0.7",
        "unplugin-auto-import": "^0.17.5",
        "unplugin-icons": "^0.18.5",
        "unplugin-vue-components": "^0.26.0",
        "unplugin-vue-macros": "^2.7.10",
        "unplugin-vue-router": "^0.8.4",
        "vite": "^5.1.4",
        "vite-bundle-visualizer": "^1.0.1",
        "vite-plugin-mkcert": "^1.17.4",
        "vite-plugin-vue-devtools": "^7.0.16",
        "vite-plugin-vue-layouts": "^0.11.0",
        "vite-plugin-webfont-dl": "^3.9.1",
        "vue-tsc": "^2.0.3",
        "zod": "^3.22.4"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "pnpm typecheck && npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
